#############################
# Dunst Volume Notification #
#############################

# Increase volume
".config/scripts/volume.sh 1"
   XF86AudioRaiseVolume

# Decrease volume
".config/scripts/volume.sh 2"
   XF86AudioLowerVolume

# Mute volume
".config/scripts/volume.sh 3"
   XF86AudioMute

# Mute microphone
".config/scripts/volume.sh 4"
   XF86AudioMicMute

######################
# Brightness Control #
######################

# Increase Brightness
"changeBacklight --inc 5"
	XF86MonBrightnessUp

# Decrease Brightness
"changeBacklight --dec 5"
	XF86MonBrightnessDown

######################
# Screenshot Control #
######################

"flameshot gui"
   Print

"flameshot screen -c"
   Control+Print

"flameshot screen -p ~/Pictures"
   Alt+Print

"toggleBacklight"
   Scroll_Lock

"st ranger"
   F5

"~/.config/scripts/extendMonitor.sh r"
	Control+Alt+Right
"~/.config/scripts/extendMonitor.sh l"
	Control+Alt+Left
"~/.config/scripts/extendMonitor.sh u"
	Control+Alt+Up
"~/.config/scripts/extendMonitor.sh d"
	Control+Alt+Down

"~/.config/scripts/extendMonitor.sh k"
	Control+Alt+k

"crave"
        Alt+Shift+B
